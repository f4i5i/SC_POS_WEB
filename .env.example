# Flask Configuration
FLASK_APP=run.py
FLASK_ENV=development
SECRET_KEY=your-secret-key-change-this-in-production

# Database Configuration
# Local SQLite (Offline)
DATABASE_URL=sqlite:///perfume_pos.db

# Cloud Database (Online) - Uncomment and configure for sync
# CLOUD_DATABASE_URL=postgresql://user:password@host:port/database
# CLOUD_DATABASE_URL=mysql://user:password@host:port/database

# Email Configuration
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-specific-password
MAIL_DEFAULT_SENDER=your-email@gmail.com
DAILY_REPORT_RECIPIENTS=manager@sunnatcollection.com,owner@sunnatcollection.com
DAILY_REPORT_TIME=18:00

# SendGrid (Alternative)
# SENDGRID_API_KEY=your-sendgrid-api-key

# Business Configuration
BUSINESS_NAME=Sunnat Collection
BUSINESS_ADDRESS=Mall of Wah, Pakistan
BUSINESS_PHONE=+92-XXX-XXXXXXX
BUSINESS_EMAIL=info@sunnatcollection.com
CURRENCY=PKR
CURRENCY_SYMBOL=Rs.
TAX_RATE=0.0  # GST rate (e.g., 0.17 for 17%)

# Sync Configuration
ENABLE_CLOUD_SYNC=False
SYNC_INTERVAL_MINUTES=30
AUTO_SYNC=True

# Backup Configuration
BACKUP_ENABLED=True
BACKUP_TIME=23:00
BACKUP_RETENTION_DAYS=30

# Session Configuration
PERMANENT_SESSION_LIFETIME=3600  # 1 hour in seconds
SESSION_COOKIE_SECURE=False  # Set to True in production with HTTPS
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax

# File Upload
MAX_CONTENT_LENGTH=16777216  # 16MB max file size
UPLOAD_FOLDER=static/uploads
ALLOWED_EXTENSIONS=png,jpg,jpeg,gif,csv,xlsx

# Pagination
ITEMS_PER_PAGE=50

# Stock Alert Thresholds
LOW_STOCK_THRESHOLD=10
CRITICAL_STOCK_THRESHOLD=5

# Security
BCRYPT_LOG_ROUNDS=12
LOGIN_ATTEMPTS_LIMIT=5
LOGIN_TIMEOUT_MINUTES=15
